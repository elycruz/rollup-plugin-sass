{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2015",
    "lib": ["es2015", "dom"],

    /* Modules */
    "module": "CommonJS",
    "moduleResolution": "node",

    /* Emit */
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "removeComments": true,
    "importHelpers": false,
    "downlevelIteration": true,
    "sourceMap": true,
    "preserveConstEnums": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,

    /* Completeness */
    "skipLibCheck": true /* Skip type checking all .d.ts files. */
  }
}
